<div class="panel large-centered large-4 columns">
  <h1><%= @tattoo.title %></h1>
  <%= image_tag(@tattoo.url, class: "tattoo-image") %>
  <% if @tattoo.description.present? %>
    <h3><%= @tattoo.description %></h3>
  <% end %>
  <% if @tattoo.studio.present? %>
    <h5>Studio: <%= @tattoo.studio %></h5>
  <% end %>
  <% if @tattoo.artist.present? %>
    <h5>Artist: <%= @tattoo.artist %></h5>
  <% end %>
  <h5>Average Rating: <%= @average_rating %>/5</h5>
</div>


<div class="reviews_list">
  <% if @tattoo.reviews.empty? %>
  <h6>No reviews yet, add one?</h6>
  <% else %>
    <table>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.body %></td>
      </tr>
    <% end %>
  </table>
  <% end %>
</div>

<h4>Rate this Ink</h4>
  <div class="review_box small-12 medium-6 large-4">
    <%= form_for([@tattoo, @review]) do |f| %>

      <%= f.label :rating %>
      <%= f.number_field :rating  %>

      <%= f.label :body, "Review" %>
      <%= f.text_area :body %>

      <%= f.submit "Submit", class: "submit_class button expand round" %>

    <% end %>
  </div>
