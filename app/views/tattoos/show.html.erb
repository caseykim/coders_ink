<div class="panel large-centered large-4 columns">
  <h1><%= @tattoo.title %></h1>
  <%= image_tag(@tattoo.url, class: "tattoo_image") %>
  <br>
  <% if @tattoo.description.present? %>
    <h3><%= @tattoo.description %></h3>
  <% end %>
  <% if @tattoo.studio.present? %>
    <h5>Studio: <%= @tattoo.studio %></h5>
  <% end %>
  <% if @tattoo.artist.present? %>
    <h5>Artist: <%= @tattoo.artist %></h5>
  <% end %>
  <% unless @tattoo.reviews.empty? %>
    <h5>Average Rating: <%= @tattoo.average_rating %>/5</h5>
  <% end %>
    <%= link_to 'Edit Tattoo', edit_tattoo_path(@tattoo) %>
    <%= button_to 'Delete Tattoo', @tattoo, method: :delete %>
</div>

<div class="reviews_list">
  <% if @tattoo.reviews.empty? %>
    <h6>No reviews yet, add one?</h6>
  <% else %>
    <table>
      <% @reviews.each do |review| %>

        <tr>
          <td>
            <%=link_to image_tag("/thumbup.png"),
          review_upvote_path(review),
          method: :post
          %></td>
          <td class=<%="score_#{review.id}"%>><%= review.score %></td>
          <td><%= link_to image_tag("/thumbdown.png"),
          review_downvote_path(review),
          method: :post
          %></td>
          <td><%= review.rating %></td>
          <td><%= review.body %></td>
          <td>Review by: <%= review.user.username %></td>
          <% if review.user == current_user %>
            <td><%= link_to 'Edit Review', edit_review_path(review), class: "edit_review" %></td>
            <td><%= button_to 'Delete Review', review, method: :delete, class: "delete_review" %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>

<h4>Rate this Ink</h4>
  <div class="review_box small-12 medium-6 large-4">
    <%= form_for([@tattoo, @review]) do |f| %>

      <%= f.label :rating %>
      <%= f.number_field :rating  %>

      <%= f.label :body, "Review" %>
      <%= f.text_area :body %>

      <%= f.submit "Submit", class: "submit_class button expand round" %>

    <% end %>
  </div>
