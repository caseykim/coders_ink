<div>
  <div class="row">
    <div class="panel large-4 columns">
        <%= image_tag(@user.avatar, id: "user_profile") %>
        <h1><%= @user.username %></h1>
        <h3><%= @user.email %></h3>
      </div>

      <div class="large-8 columns">
        <div id="tattoo_listings">
          <% @user.tattoos.each do |tattoo| %>
            <div class="tattoo panel large-centered large-6 columns">
              <%= link_to image_tag(tattoo.url, class: "tattoo-thumbnail"), tattoo_path(tattoo) %>
              <%= tattoo.title %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
